{
  "name": "web",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run tsc && npm run sass && npm run pug",
    "clean": "git ls-files --ignored --others --exclude-standard | grep -v 'node_modules' | xargs -d '\\n' rm",
    "sass": "npx sass --sourcemap=none --update assignments classwork",
    "pug": "npx pug assignments classwork",
    "tsc": "npx tsc -p tsconfig.json || :"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bt-wcsp/web.git"
  },
