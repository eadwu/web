{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "web: clean",
      "type": "shell",
      "command": "git ls-files --ignored --others --exclude-standard | grep -v 'node_modules' | xargs -d '\\n' rm"
    },
    {
      "label": "scss: build",
      "group": "build",
      "type": "shell",
      "command": "npx sass --sourcemap=none --update assignments classwork"
    },
    {
      "label": "scss: watch",
      "type": "shell",
      "command": "npx sass --sourcemap=none --watch assignments classwork"
    },
    {
      "group": "build",
      "type": "typescript",
      "tsconfig": "web/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
