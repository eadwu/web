{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "web: clean",
      "type": "npm",
      "script": "clean"
    },
    {
      "label": "sass: build",
      "type": "npm",
      "script": "sass: build",
      "group": "build"
    },
    {
      "label": "sass: watch",
      "type": "shell",
      "command": "npx sass --sourcemap=none --watch assignments classwork"
    },
    {
      "label": "tsc: build - web/tsconfig.json",
      "type": "npm",
      "script": "tsc: build",
      "group": "build"
    },
    {
      "type": "typescript",
      "tsconfig": "web/tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}
