{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "web: build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "web: clean",
      "type": "npm",
      "script": "clean"
    },
    {
      "label": "web: test",
      "type": "npm",
      "script": "test"
    },
    {
      "label": "sass: build",
      "type": "npm",
      "script": "sass"
    },
    {
      "label": "sass: watch",
      "type": "shell",
      "command": "npx sass --sourcemap=none --poll --watch assignments classwork"
    },
    {
      "label": "pug: build",
      "type": "npm",
      "script": "pug"
    },
    {
      "label": "pug: watch",
      "type": "shell",
      "command": "npx pug -w assignments classwork"
    },
    {
      "label": "tsc: build",
      "type": "npm",
      "script": "tsc",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "tsc: watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
