{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "transpose",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/babel",
      "windows": {
        "command": "${workspaceFolder}\\node_modules\\.bin\\babel"
      },
      "args": [
        "${workspaceFolder}",
        "--watch",
        "--extensions", ".es",
        "--out-dir", "${workspaceFolder}/"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
